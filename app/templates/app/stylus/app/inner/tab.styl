$tabBarBorderColor = #c7e1f6

.tab
	/.tab-bar
		position: relative
		padding-left: 1px
		// border-bottom: 1px solid $tabBarBorderColor
		overflow: hidden
		/.tb-right
			float right
			/.tb-right-txt
				line-height 32px
		/.tb-line
			position: absolute
			left 0
			bottom 0
			width: 100%
			height 1px
			background-color: $tabBarBorderColor
			z-index: 2
		/.tb-item
			float: left
			padding 0 17px
			border-width: 1px 1px 0
			border-style: solid
			border-color: $tabBarBorderColor
			line-height: 32px
			margin-left: -1px
			background-color: #f7fbff
			color #1b1b1b
			i
				display: none
			&:hover
				text-decoration: none
				color @color
			// .tb-item__active
			/&__active
				position: relative
				z-index 3
				background-color: #fff
				color $gsiteColor
				&:hover
					color @color
				i
					display block
					position: absolute
					top -1px
					left -1px
					height 2px
					width 100%
					padding 0 1px
					background-color: $gsiteColor
			/.tb-txt
				color #1b1b1b
				font-size: 1.2em
			

	/.tab-cont
		margin-top: 5px
		/.tc-item
			display: none
			// .tc-item__active
			/&__active
				display block