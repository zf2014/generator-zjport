.result-title
	position: relative
	background-color: #e9f5ff
	border: 1px solid #c7e1f6
	line-height: 32px
	padding-left: 18px
	font-size: 1.2em
	color #0a2f4d
	font-weight: 700
	zoom 1
	/.fold
		position: absolute
		right 4px
		top 50%
		width: 31px
		height: 28px
		margin-top: -(@height/2)
		background: url(../images/common/fold.png) no-repeat 0 0
		cursor: pointer
		/.result-foldable-off &
			background-position: 0 100%
	
	/.result-title-text-right
		float: right
		margin-right: 8px
		color #1b1b1b
		font-weight 100
.result-list
.result-content
	margin-top: -1px
.result-table
	table-layout: fixed
	border: 1px solid #e7e7e7
	font-size: 1.2em
	/.col-checkbox
		width: 48px
	tbody
		tr
			cursor: pointer
		/.tr__is-hover
			background-color: #eef7ff
			cursor: pointer
		
		/.tr__is-modify
		/.tr__is-latest
			background-color: #fff4ef	
		/.tr__is-active
			background-color: #eef7ff
		
		.tr__is-page
			cursor default
	

	td
	th
		height: 32px
		border-color: #e7e7e7
		border-style: solid
		border-width: 1px
	th
		background-color: #f5f5f5
		
	/.cel-center
		text-align: center
	
	/.cel-left
		text-align: left
		padding-left 6px
	/.cel-right
		text-align: right
		padding-right 6px
	/.cel-oper
		a
			margin-left: 3px
			margin-right: 3px
	/.cel-longtxt
		padding-left 5px
		padding-right: 5px
		span
			display: block
			width: 100%
			height: 18px
			line-height @height
			$mx_text_ellipsis()
			// overflow: hidden
			

.result-page
	padding-right: 10px
	text-align: right

.result-empty-content
	min-height: 380px
	background: #fff url(../images/inner/empty.jpg) no-repeat 50% 50%

.result-loading-content
	min-height: 200px
	background: #fff url(../images/inner/loading.gif) no-repeat 50% 50%


