.inp
	margin 0
	height: 26px
	padding 0 4px
	line-height: @height
	border: 1px solid #7f9db9
	&:focus
		outline-style: none

	/&-search
		width: 80%
	/&-delivery
		width: 55%
		margin-left 5px

	/&-tree
		width: 80%

	/&-time
		width: 80px

	/&-checkbox
		vertical-align: middle

	/&-radio
		margin: 0
		vertical-align: middle

	/&-select
		height: 28px
		padding-right: 0

	/&-textarea
		height: 4em

	/&-readonly
		background: #f5f5f5
		border: 1px solid #f5f5f5!important
		box-shadow: inset 1px 1px 3px #333
		-moz-box-shadow: inset 1px 1px 3px #333
 		-webkit-box-shadow: inset 1px 1px 3px #333

	/&-w60
		width 60px!important