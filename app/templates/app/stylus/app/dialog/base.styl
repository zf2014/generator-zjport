.dialog-content
	position: relative
	padding 20px 8px 44px

.dialog-title
	position: relative
	background-color: #e9f5ff
	line-height: 36px
	border: 1px solid $bdColor
	color #0a2f4d
	font-size: 1.2em
	zoom 1
	span
	strong
		margin-left: 8px
	
	/&__small
		line-height @line-height*0.8

.dialog-table
	width: 100%
	font-size: 1.2em
	margin-top: -1px
	/.dialog-col-th
		width: 15%
	/.dialog-col-td
		width: 35%
	th
		padding-top: 7px
		padding-bottom 7px
		border: 1px solid $bdColor2
		vertical-align: top
		text-align: right
		background-color: $thBackgroudColor
		color #535353
		
	td
		padding-top: 4px
		padding-bottom: 4px
		// min-height: 36px
		vertical-align: middle
		border: 1px solid $bdColor2
	/.cell-title
		display: block
		padding-right: 5px
	/.cell-inp-wrap
		padding-left: 5px
		line-height 24px

.dialog-table_humdrum
	th
		background: none
		border: 0
	td
		border: 0



.dialog-operation
	position: fixed
	left 0
	bottom 0
	width 100%
	height: 44px
	line-height @height
	text-align: center
	// padding-top: 5px
	// padding-bottom 5px
	border-top: 1px solid $bdColor2
	margin-top: -1px
	background-color: $modalBtnBarBgColor
	.btn
		margin 8px 5px 0


.dialog-other
	position: relative
	z-index: 999